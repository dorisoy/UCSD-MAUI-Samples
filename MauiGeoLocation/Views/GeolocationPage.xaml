<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiGeoLocation.Views.GeolocationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="GeolocationPage">
    <VerticalStackLayout>
        <VerticalStackLayout Margin="24">
            <Button Clicked="OnGetLastCachedLocation" Text="Get Last Cached Location..." />
            <Label
                x:Name="CachedLocationLabel"
                HorizontalOptions="Center"
                Text="..."
                VerticalOptions="Center" />
        </VerticalStackLayout>
        <VerticalStackLayout Margin="24">
            <Button Clicked="OnGetLastActiveLocation" Text="Get Last Active Location..." />
            <Label
                x:Name="ActiveLocationLabel"
                HorizontalOptions="Center"
                Text="..."
                VerticalOptions="Center" />
        </VerticalStackLayout>

        <VerticalStackLayout Margin="24">
            <Button Clicked="OnNavigateToUcsd" Text="Navigate To UCSD..." />
            <Label
                x:Name="NavigateResultLabel"
                HorizontalOptions="Center"
                Text="..."
                VerticalOptions="Center" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
