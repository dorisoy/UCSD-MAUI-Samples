<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiNavigation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiNavigation.Views"
    FlyoutBehavior="{OnIdiom Phone=Flyout,
                             Desktop=Flyout}">

    <FlyoutItem Title="Search Page">
        <ShellContent
            Title="Search Page"
            ContentTemplate="{DataTemplate views:SearchWithHandlerPage}"
            Route="SearchPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Pop-up Alerts" Icon="popup_icon.png">
        <ShellContent
            Title="Toasts, Snackbar and Alerts"
            ContentTemplate="{DataTemplate views:PopUpsPage}"
            Route="PopUpsPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Toasts, Snackbar and Alerts" Icon="popup_icon.png">
        <ShellContent
            Title="Toasts, Snackbar and Alerts"
            ContentTemplate="{DataTemplate views:ToastAndSnackBarPage}"
            Route="ToastAndSnackBarPage" />
    </FlyoutItem>

    <MenuItem Command="{Binding NavigateToSettingsCommand}" Text="Settings" />
</Shell>
