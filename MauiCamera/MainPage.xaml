<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiCamera.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI">

    <Grid>
        <VerticalStackLayout
            Padding="30,0"
            HorizontalOptions="Fill"
            Spacing="25"
            VerticalOptions="Fill">
            <cv:CameraView
                x:Name="CameraView"
                BarcodeDetected="CameraView_BarcodeDetected"
                HeightRequest="200"
                Loaded="CameraView_CamerasLoaded"
                WidthRequest="300" />
            <HorizontalStackLayout>
                <Button x:Name="SnapPic" Clicked="CameraSnaped" Text="Snap Pic"  Margin="16" /> <Button x:Name="CameraIndexButton" Clicked="CameraChanged" Text="Camera[0]"  Margin="16" />
            </HorizontalStackLayout>
            <Image   x:Name="SnapPreview"  Aspect="AspectFill"            HeightRequest="2000"
                
                WidthRequest="1800" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
