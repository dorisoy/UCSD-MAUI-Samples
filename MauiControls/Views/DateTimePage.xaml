<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiControls.Views.DateTimePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DateTimePage">
    <VerticalStackLayout>

        <DatePicker
            Margin="40"
            Date="06/21/2022"
            DateSelected="OnDateSelected"
            MaximumDate="12/31/2022"
            MinimumDate="01/01/2022" />

        <TimePicker
            x:Name="MyTimePicker"
            Margin="40"
            PropertyChanged="OnTimeChanged"
            Time="4:15:26" />

    </VerticalStackLayout>
</ContentPage>