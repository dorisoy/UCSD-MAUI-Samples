<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControls.Views.TextInput"
             Title="TextInput">
    <StackLayout>
        <HorizontalStackLayout Margin="4">
            <Label Text="Entry" WidthRequest="120" VerticalOptions="Center"/>
            <Entry Text="Enter Text Here" TextChanged="Entry_TextChanged" WidthRequest="100" />
            <Label x:Name="EntryLabel" Text="" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="4">
            <Label Text="Editor" WidthRequest="120" VerticalOptions="Center"/>
            <Editor Text="Enter Text Here" TextChanged="Editor_TextChanged" WidthRequest="100" HeightRequest="200"  />
            <Label x:Name="EditorLabel" Text="" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>
