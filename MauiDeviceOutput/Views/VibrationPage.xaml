<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDeviceOutput.Views.VibrationPage"
             Title="VibrationPage">
    <VerticalStackLayout>
        <Label 
            Text="Vibration"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Start Vibrating" Margin="16" x:Name="VibrateStartButton" Clicked="VibrateStartButton_Clicked" />
        <Button Text="Stop Vibrating"  Margin="16" x:Name="VibrateStopButton" Clicked="VibrateStopButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>