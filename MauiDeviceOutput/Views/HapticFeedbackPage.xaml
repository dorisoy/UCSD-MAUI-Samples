<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDeviceOutput.Views.HapticFeedbackPage"
             Title="HapticFeedbackPage">
    <VerticalStackLayout>
        <Label 
            Text="Haptic Feedback"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Click Feedback" Clicked="HapticShortButton_Clicked" />
        <Button Text="Long Press Feedback" Clicked="HapticLongButton_Clicked" />

    </VerticalStackLayout>
</ContentPage>