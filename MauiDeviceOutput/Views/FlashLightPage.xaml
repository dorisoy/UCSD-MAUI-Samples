<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiDeviceOutput.Views.FlashLightPage"
             Title="FlashLightPage">
    <HorizontalStackLayout VerticalOptions="Start" Margin="24">
        <Label Text="FlashLight"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        <Switch  Margin="16" x:Name="FlashlightSwitch"  Toggled="FlashlightSwitch_Toggled" />
    </HorizontalStackLayout>
</ContentPage>
